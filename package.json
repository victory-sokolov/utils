{
    "name": "@victory/utils",
    "version": "0.1.0",
    "license": "MIT",
    "type": "module",
    "description": "Various TypeScript/JavaScripts utils functions for node and browser",
    "author": {
        "email": "viktorsokolov.and@gmail.com",
        "name": "Viktor Sokolov"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/victory-sokolov/utils.git"
    },
    "bugs": {
        "url": "https://github.com/victory-sokolov/utils/issues"
    },
    "keywords": [
        "utils",
        "typescript utils",
        "javascript utils"
    ],
    "main": "./dist/main.js",
    "module": "./dist/main.mjs",
    "typings": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist/*",
        "*.d.ts"
    ],
    "scripts": {
        "build": "node build.js",
        "test": "jest --runInBand",
        "coverage": "jest --coverage",
        "lint": "eslint .",
        "docs": "yarn run typedoc ./src --out docs",
        "prepare": "yarn run build && yarn run docs",
        "format": "prettier --write \"src/**/*.ts\"",
        "prepublishOnly": "yarn run lint && yarn test",
        "preversion": "yarn run lint && yarn test",
        "version": "yarn run format && git add -A src",
        "postversion": "git push && git push --tags",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/jest": "^29.2.5",
        "@types/node": "18.11.18",
        "@types/webrtc": "^0.0.33",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "esbuild": "^0.16.14",
        "eslint": "^8.31.0",
        "esno": "^0.16.3",
        "jest-cli": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "npm-dts": "^1.3.12",
        "semantic-release": "^19.0.5",
        "source-map": "^0.7.4",
        "ts-jest": "^29.0.3",
        "typedoc": "^0.23.23",
        "typescript": "4.9.4"
    },
    "jest": {
        "preset": "ts-jest",
        "collectCoverage": true,
        "testEnvironment": "jsdom",
        "collectCoverageFrom": [
            "./src/**/{!(index|file),}.ts"
        ]
    },
    "dependencies": {
        "prettier": "^3.0.0-alpha.4"
    }
}
