{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "stripInternal": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": false,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "allowJs": true,
        "outDir": "./dist",
        "lib": [
            "esnext",
            "dom",
        ],
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}
